<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      focusComponent="register"
      title="msg://register.title">
    <layout justifyContent="CENTER" alignItems="CENTER">
        <registerForm title="registerForm">
            <formLayout>
                <textField label="First Name" colspan="2"/>
                <textField label="Last Name" colspan="2"/>
                <textField label="Username" colspan="2"/>
                <textField label="Email" colspan="2"/>
                <passwordField label="Password"/>
                <passwordField label="Repeat Password"/>
                <formItem>
                    <button text="Submit"/>
                </formItem>
            </formLayout>
        </registerForm>
    </layout>
</view>